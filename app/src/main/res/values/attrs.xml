<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomUnitView">
        <attr name="useFloat" format="boolean" />
        <attr name="defaultValue" format="float" />
        <attr name="changeFactor" format="float" />
        <attr name="unitTypes" format="enum">
            <enum name="minutes" value="0" />
            <enum name="hours" value="1" />
            <enum name="kg" value="2" />
            <enum name="lbs" value="3" />
        </attr>

        <attr name="titleTextColor" format="color|reference" />
        <attr name="descTextColor" format="color|reference" />

        <attr name="titleTextSize" format="dimension|reference" />
        <attr name="descTextSize" format="dimension|reference" />
    </declare-styleable>
</resources>
